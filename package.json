{
  "name": "CalcPad",
  "description": "A diffent take on the calculator",
  "author": "Filipe Sabella <no-reply@filipesabella.github.io>",
  "repository": "https://github.com/filipesabella/CalcPad",
  "version": "1.0.7",
  "main": "src/electron/main.js",
  "email": "no-reply@filipesabella.github.io",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start-server": "parcel ./src/main/index.html -d build/",
    "start-electron": "cross-env ELECTRON_START_URL=http://localhost:1234 electron .",
    "test": "mocha -r ts-node/register src/test/**.spec.ts",
    "test:watch": "mocha --compilers ts:ts-node/register,tsx:ts-node/register --watch-extensions ts --watch src/test/**/*.spec.ts",
    "build": "parcel build ./src/main/index.html -d build/ --public-url ./",
    "ship-windows": "yarn run build && copy .\\assets\\* .\\build\\ && electron-builder -w",
    "ship-linux": "yarn run build && copy .\\assets\\* .\\build\\  && electron-builder -l deb rpm AppImage snap"
  },
  "build": {
    "appId": "filipesabella.CalcPad",
    "mac": {
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "filipesabella",
        "repo": "CalcPad"
      }
    ],
    "files": [
      "src/electron/*",
      "build/*"
    ]
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/runtime": "^7.15.4",
    "@types/electron": "^1.6.10",
    "@types/mocha": "^9.1.0",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "cross-env": "^7.0.3",
    "electron": "^17.0.1",
    "electron-builder": "^22.14.13",
    "electron-reload": "^1.5.0",
    "less": "^4.1.2",
    "mocha": "^9.2.1",
    "parcel-bundler": "^1.12.5",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "convert-units": "^2.3.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typeface-roboto-mono": "^1.1.13"
  },
  "resolutions": {
    "set-value": "^2.0.1",
    "kind-of": "^6.0.3"
  }
}
